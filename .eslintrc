{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"]
  },
  "env": {
    "node": true,
    "es6": true
  },
  "globals": {
    "Uint8Array": false,
    "Uint16Array": false
  }
}
